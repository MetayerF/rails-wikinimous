<h1>My Articles</h1>


<strong><%= link_to "Create new article", new_articles_path %></strong>

<ul>
  <% @articles.each do |article| %>
  <li>
    <h2><strong><%= link_to article.title, article_path(article) %></strong>
    - <%= link_to "Edit", edit_article_path(article) %>
    - <%= link_to "Delete", article_path(article),
      method: :delete,
      data: { confirm: "Delete this article?" } %>
    </h2>
    <article><%= link_to article.content, article_path(article) %></article>

  </li>
  <% end %>
</ul>
